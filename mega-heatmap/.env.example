# MegaSHETH Labs Environment Variables
# Copy this to .env.local and fill in your values

# ===========================================
# RPC Providers (Required for heatmap data)
# ===========================================
# Public RPC (use this for now)
NEXT_PUBLIC_MEGAETH_RPC_URL=https://rpc.megaeth.com

# Alchemy RPC (permissioned - will enable when mainnet is live)
# NEXT_PUBLIC_MEGAETH_ALCHEMY_RPC=https://megaeth-mainnet.g.alchemy.com/v2/M6x3kxsv7R7NmVAxQEFoo

# Base RPC (for testing until MegaETH mainnet)
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
# Or use Alchemy: https://base-mainnet.g.alchemy.com/v2/YOUR_KEY

# Basescan API (for fetching transaction history)
# Get free key at: https://basescan.org/apis
NEXT_PUBLIC_BASESCAN_API_KEY=

NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_key_here

# ===========================================
# Database (Optional for development)
# ===========================================
DATABASE_URL=postgres://localhost:5432/megasheth_labs

# ===========================================
# Authentication (Optional - for social features)
# ===========================================
# Twitter OAuth 2.0
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# Farcaster (Neynar API) - for username/FID lookups
NEYNAR_API_KEY=
NEXT_PUBLIC_NEYNAR_API_KEY=

# ===========================================
# WalletConnect (Required for wallet connection)
# ===========================================
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ===========================================
# Analytics (Optional)
# ===========================================
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=
